unit TabbedTemplate;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Graphics, FMX.Controls, FMX.Forms, FMX.Dialogs, FMX.TabControl,
  FMX.StdCtrls, FMX.Gestures, FMX.Controls.Presentation, FMX.Objects,
  FMX.MultiView, FMX.ImgList, FMX.Layouts, FMX.Effects;

type
  TuAna = class(TForm)
    toolbar_baslik: TToolBar;
    toollabel: TLabel;
    tabcontrol_Menu: TTabControl;
    tabUrunler: TTabItem;
    tabSepetim: TTabItem;
    tabKategoriler: TTabItem;
    tabHesabim: TTabItem;
    GestureManager1: TGestureManager;
    img_SideMenu: TImage;
    img_Sepetim: TImage;
    sideMenu: TMultiView;
    ScrollBox1: TScrollBox;
    Rectangle1: TRectangle;
    ShadowEffect1: TShadowEffect;
    Layout1: TLayout;
    Glyph1: TGlyph;
    Layout2: TLayout;
    Label1: TLabel;
    btn_urunBirDetail: TButton;
    btn_urunBirSepet: TButton;
    Rectangle2: TRectangle;
    ShadowEffect2: TShadowEffect;
    Layout3: TLayout;
    Layout4: TLayout;
    Label2: TLabel;
    Rectangle3: TRectangle;
    ShadowEffect3: TShadowEffect;
    Layout5: TLayout;
    Glyph3: TGlyph;
    Layout6: TLayout;
    Label3: TLabel;
    Rectangle4: TRectangle;
    ShadowEffect4: TShadowEffect;
    Layout7: TLayout;
    Glyph4: TGlyph;
    Layout8: TLayout;
    Label4: TLabel;
    Button7: TButton;
    Button8: TButton;
    Rectangle5: TRectangle;
    ShadowEffect5: TShadowEffect;
    Layout9: TLayout;
    Glyph5: TGlyph;
    Layout10: TLayout;
    Label5: TLabel;
    Button9: TButton;
    Button10: TButton;
    Rectangle6: TRectangle;
    ShadowEffect6: TShadowEffect;
    Layout11: TLayout;
    Glyph6: TGlyph;
    Layout12: TLayout;
    Label6: TLabel;
    Button1: TButton;
    Button2: TButton;
    Image1: TImage;
    Image2: TImage;
    Layout13: TLayout;
    Label7: TLabel;
    procedure FormCreate(Sender: TObject);
    procedure FormGesture(Sender: TObject; const EventInfo: TGestureEventInfo;
      var Handled: Boolean);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  uAna: TuAna;

implementation

{$R *.fmx}

procedure TuAna.FormCreate(Sender: TObject);
begin
  { This defines the default active tab at runtime }
  tabcontrol_Menu.ActiveTab := tabUrunler;
end;

procedure TuAna.FormGesture(Sender: TObject;
  const EventInfo: TGestureEventInfo; var Handled: Boolean);
begin
{$IFDEF ANDROID}
  case EventInfo.GestureID of
    sgiLeft:
    begin
      if tabcontrol_Menu.ActiveTab <> tabcontrol_Menu.Tabs[tabcontrol_Menu.TabCount-1] then
        tabcontrol_Menu.ActiveTab := tabcontrol_Menu.Tabs[tabcontrol_Menu.TabIndex+1];
      Handled := True;
    end;

    sgiRight:
    begin
      if tabcontrol_Menu.ActiveTab <> tabcontrol_Menu.Tabs[0] then
        tabcontrol_Menu.ActiveTab := tabcontrol_Menu.Tabs[tabcontrol_Menu.TabIndex-1];
      Handled := True;
    end;
  end;
{$ENDIF}
end;

end.
